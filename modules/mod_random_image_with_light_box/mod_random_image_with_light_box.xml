<?xml version="1.0" encoding="utf-8"?>
<extension type="module" version="2.5.1" client="site" method="upgrade">
	<name>Random image with light box</name>
	<author>Gopi.R</author>
	<creationDate>August 2011</creationDate>
	<copyright>(C) 2010 - 2012 www.gopiplus.com, LLC. All rights reserved.</copyright>
	<license>http://www.gnu.org/licenses/gpl-2.0.html GNU/GPLv2</license>
	<authorEmail>gopiplus@gmail.com</authorEmail>
	<authorUrl>http://www.gopiplus.com/extensions/2011/08/random-image-with-fancy-zoom-joomla-module/</authorUrl>
	<version>2.0</version>
	<description>Random image display with light box on image click</description>
	<files>
		<filename module="mod_random_image_with_light_box">mod_random_image_with_light_box.php</filename>
		<filename>helper.php</filename>
		<filename>index.html</filename>		
		<filename>mod_random_image_with_light_box.xml</filename>
		<filename>crop-random-image.php</filename>
		<folder>tmpl</folder>
		<folder>js</folder>
		<folder>inc</folder>
		<folder>images</folder>
	</files>
	<config>
		<fields name="params">
			<fieldset name="basic">
				<field
					name="type"
					type="text"
					default="jpg"
					size="10"
					label="Image Type"
					description="Type of image PNG/GIF/JPG etc. (the default is JPG)." />
				<field
					name="folder"
					size="60"
					type="text"
					default="modules/mod_random_image_with_light_box/images"
					label="Image Folder"
					description="Path to the image folder relative to the site URL (  e.g. modules/mod_random_image_with_light_box/images  ).  Note: no trailing slash" />
				<field
					name="width"
					type="text"
					size="10"
					default="200"
					label="Width"
					description="Width of the thumbnail in (px) (e.g. 300)" />
			</fieldset>
			<fieldset
				name="advanced">
				<field
					name="moduleclass_sfx"
					type="text"
					label="Module class suffix"
					description="Module Class Suffix" />
			</fieldset>
		</fields>
	</config>
</extension>
